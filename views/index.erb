
<h1>Life is too short for playing Sudoku</h1>
<div id="sudoku">
	<form action="/" method="post">
		<% 3.times do |row| %>
			<div class='row'>
				<% 3.times do |box| %>
					<div class='box'>
						<% 3.times do |cell_row| %>
							<div class='cell-row'>
								<% 3.times do |cell| %>
								<%= partial :cell, :locals => {:cell_index => row * 27 + box * 3 + cell_row * 9 + cell}  %>
								<% end %>
							</div>
						<% end %>
				 	</div>
				<% end %>
			</div>
		<% end %>
	</div>
	<div>
		<button name="Check">Check solution</button>
		<button name="Save">Save Game</button>
	</form>	

	<form action="/new-game?difficulty=low" method="post">
		<button>New Easy Game</button>
	</form>

	<form action="/new-game?difficulty=high" method="post">
		<button>New Hard Game</button>
	</form>
	<form action="/solution" method="get">
		<button>Solution</button>
	</form>
</div>
	
<div id="flash">
	<%= flash[:notice] %>
</div>
